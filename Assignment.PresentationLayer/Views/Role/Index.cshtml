@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-primary mt-3">Create New Role</a>

<div class=" mt-2">
    <form asp-action="Index" method="Get" class="row offset-2">
        <div class="col-10">
            <input class="form-control" type="text" placeholder="User's Name" name="email" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(r => r.Id)</td>
            <td>@Html.DisplayNameFor(r => r.Name)</td>

            <td>Details</td>
            <td>Edit</td>
            <td>delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>

                <partial name="_ButtonsPartial" model="role.Id"></partial>
            </tr>
        }
    </tbody>
</table>