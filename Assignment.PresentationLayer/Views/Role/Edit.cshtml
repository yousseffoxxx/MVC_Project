@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Edit">

    <partial name="PartialViews/CreateEditPartial"></partial>

    <div class="mt-2">
        <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id">Add Or Remove Users</a>
    </div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit"> Save</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>