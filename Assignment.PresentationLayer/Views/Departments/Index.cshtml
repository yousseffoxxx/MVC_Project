@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a class="btn btn-primary me-3" asp-action="Create">Create New Department</a>
</div>

@if (Model.Any())
{
    <h1>All Departments</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d=>d.Code)</td>
                <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(d=>d.CDate)</td>

                <td>Details</td>
                <td>Edit</td>
                <td>delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CDate</td>

                    <partial name="_ButtonsPartial" Model="@item.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert-warning">
        <h2>No Departments</h2>
    </div>
}