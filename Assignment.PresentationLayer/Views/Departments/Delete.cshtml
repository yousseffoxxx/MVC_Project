@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1> Are You Sure You Want To Delete @Model.Name Department</h1>

<form method="post" asp-action="Delete">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <input class=" form-control" asp-for="Code" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class=" form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="CDate"></label>
        <input class=" form-control" asp-for="CDate" />
    </div>
    <div class="mt-3">
        <button class="btn btn-success" type="submit"> Delete</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>