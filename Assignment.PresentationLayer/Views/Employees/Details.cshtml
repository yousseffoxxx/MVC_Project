@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name Employee Details</h1>
<div class="form-group">
    <label asp-for="Name"></label>
    <input readonly class=" form-control" asp-for="Name" />
</div>
<div class="form-group">
    <label asp-for="Age"></label>
    <input readonly class=" form-control" asp-for="Age" />
</div>
<div class="form-group">
    <label asp-for="Address"></label>
    <input readonly class=" form-control" asp-for="Address" />
</div>
<div class="form-group">
    <label asp-for="Salary"></label>
    <input readonly class=" form-control" asp-for="Salary" />
</div>
<div class="form-group">
    <label asp-for="Email"></label>
    <input readonly class=" form-control" asp-for="Email" />
</div>
<div class="form-group">
    <label asp-for="Phone"></label>
    <input readonly class=" form-control" asp-for="Phone" />
</div>
<div class="form-group">
    <label asp-for="IsActive"></label>

    @if (Model.IsActive)
    {
        <i class="fa-solid fa-circle" style="color:green"></i>
    }
    else
    {
        <i class="fa-solid fa-circle" style="color:red"></i>
    }

</div>

<div class="mt-3">
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>