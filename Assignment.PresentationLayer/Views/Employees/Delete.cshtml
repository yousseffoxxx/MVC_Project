@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1> Are You Sure You Want To Delete @Model.Name Employee</h1>

<form method="post" asp-action="Delete">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly class=" form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input readonly class=" form-control" asp-for="Age" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input readonly class=" form-control" asp-for="Address" />
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input readonly class=" form-control" asp-for="Salary" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input readonly class=" form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input readonly class=" form-control" asp-for="Phone" />
    </div>
    <div class="form-group">
        <label asp-for="IsActive"></label>

        @if (Model.IsActive)
        {
            <i class="fa-solid fa-circle" style="color:green"></i>
        }
        else
        {
            <i class="fa-solid fa-circle" style="color:red"></i>
        }

    </div>
    <div class="mt-3">
        <button class="btn btn-danger" type="submit"> Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>