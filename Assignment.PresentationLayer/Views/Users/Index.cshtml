@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class=" mt-2">
    <form asp-action="Index" method="Get" class="row offset-2">
        <div class="col-10">
            <input class="form-control" type="text" placeholder="User's Name" name="email" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(u => u.Id)</td>
            <td>@Html.DisplayNameFor(u => u.UserName)</td>
            <td>@Html.DisplayNameFor(u => u.FirstName)</td>
            <td>@Html.DisplayNameFor(u => u.LastName)</td>
            <td>@Html.DisplayNameFor(u => u.Email)</td>
            <td>@Html.DisplayNameFor(u => u.Roles)</td>

            <td>Details</td>
            <td>Edit</td>
            <td>delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@Html.DisplayFor(e => user.Email)</td>
                <td>@string.Join("," , user.Roles)</td>

                <partial name="_ButtonsPartial" model="user.Id"></partial>
            </tr>
        }
    </tbody>
</table>